{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // These Python project tasks assume you have installed
    // and configured: setuptools, build, wheel, black, pylint, pytest, pytest-cov, Sphinx and sphinx-rtd-theme
    // Use the Update Toolchain task to install the necessary packages.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update Toolchain",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "setuptools",
                "build",
                "wheel",
                "pylint",
                "pytest",
                "pytest-cov",
                "black",
                "Sphinx",
                "sphinx-rtd-theme",
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "${config:modulename}.egg-info",
            ],
            "windows": {
                "command": "Get-ChildItem",
                "args": [
                    "-Path",
                    "build\\,",
                    "dist\\,",
                    "htmlcov\\,",
                    "docs\\_build,",
                    "${config:modulename}.egg-info",
                    "-Recurse",
                    "|",
                    "Remove-Item",
                    "-Recurse",
                    "-Confirm:$false",
                    "-Force",
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "PylintError",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "-E",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "--reports=y",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
            ],
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "${workspaceFolder}/dist/${config:distname}-${config:moduleversion}-py3-none-any.whl",
                "--user",
                "--force-reinstall"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                //"Update Toolchain",
                "Clean",
                "Format",
                "PylintError",
                "Pylint",
                "Test",
                "Build",
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
    ]
}